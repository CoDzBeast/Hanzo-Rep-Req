{
  "name": "HH Return Label Queue",
  "description": "Queue demo return labels while shipping and print all at once.",
  "version": "1.0.1",
  "manifest_version": 3,

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "webNavigation",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.hattorihanzoshears.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.hattorihanzoshears.com/*"],
      "js": ["logger.js", "content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Label Queue",
    "default_popup": "popup.html"
  },

  "options_page": "options.html"
}
